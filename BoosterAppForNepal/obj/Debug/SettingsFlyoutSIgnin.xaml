<SettingsFlyout
    x:Class="BoosterAppForNepal.SettingsFlyoutSIgnin"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BoosterAppForNepal"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    IconSource="Assets/SmallLogo.png"
    d:DesignWidth="346" Title="Sign In">

    <!-- This StackPanel acts as a root panel for vertical layout of the content sections -->
    <StackPanel VerticalAlignment="Stretch" HorizontalAlignment="Stretch" >

        <!-- The StackPanel(s) below define individual content sections -->

        <!-- Content Section 1-->
        <StackPanel Style="{StaticResource SettingsFlyoutSectionStyle}">

            <!-- Section 1 header -->

                <TextBlock Text="User Name" Style="{StaticResource TitleTextBlockStyle}"/>
                <TextBox x:Name="SignIn_Id" PlaceholderText="Hotmail address or Mobile Number" Width="250" Margin="0,10"/>
                <TextBlock  Text="Password" Style="{StaticResource TitleTextBlockStyle}"/>
                <TextBox x:Name="SignIn_pwd" Width="250" Margin="0,10"/>
                <Button Content="Forgot Username or Password"  Foreground="#FFEC0909"/>
                <Button Content="Sign In" HorizontalAlignment="Right" Background="#B346CB28" Foreground="White" Margin="0,0,0,10"/>
                <!-- Section 1 header 
            <Button Style="{StaticResource SettingsButton}" Content="Sign In" Margin="20,10,0,10" Click="SignIn_Click" />
            <Button Style="{StaticResource SettingsButton}" Content="Sign Up" />
            <Button Style="{StaticResource SettingsButton}" Content="About" />
            <Button Style="{StaticResource SettingsButton}" Content="Permissions" />
            <Button Style="{StaticResource SettingsButton}" Content="Rate and review" />

            Section 1 body -->



        </StackPanel>

        <!-- Define more Content Sections below as necessary -->

    </StackPanel>
</SettingsFlyout>

